<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            <a href="issues/@Item.Id">@Item.Title</a>
        </h5>
        <p class="card-text">
            <ul class="list-unstyled">
                <li><strong>Reporter</strong>: @(Item.Reporter ?? "")</li>
                <li><strong>Assignee</strong>: @(Item.Assignee ?? "")</li>
                <li><strong>Tester</strong>: @(Item.Tester ?? "")</li>
            </ul>
        </p>
        <small class="card-text">@Item.Type</small>
        <hr/>
        <div class="card-text">
            @IssueActions
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    public int BoardId { get; set; }

    [Parameter]
    public IssuesListModel.IssueListItem Item { get; set; }

    [Parameter]
    public RenderFragment IssueActions { get; set; }
}